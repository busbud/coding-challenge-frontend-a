doctype html
html.en(lang='en')
  head
    title=title
    
    link(rel="stylesheet", type="text/css", href="css/foundation.css")
    link(rel="stylesheet", type="text/css", href="css/global.css")

    style(type='text/css').
      html, body {
        margin: 0;
        min-height: 300px;
        background: #EBF0F2;
      }

        /* header */
      .header {
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        background-color: #3678ae;
        background-image: url(data:image/svg+xml;base64,);
        background-image: linear-gradient(bottom, #275597 0%, #499fc5 100%);
        color: #fff;
        padding: 15px 0;
      }
      .header a {
        color: #fff;
      }
        /* logo */
      .logo {
        background: url("http://dnls6ci2ykmn3.cloudfront.net/images/sprites/R-gQfJb/logo_header.png") 0 0 no-repeat;
        width: 124px;
        height: 40px;
      }
      .logo a {
        display: block;
        height: 100%;
      }
      .logo a:hover {
        text-decoration: none;
      }
      .logo span {
        display: none;
      }
        /* hero */
      .hero-unit {
        background-repeat: no-repeat;
        background-color: #000;
        background-position: center bottom;
        background-size: cover;
        background-image: url(http://dnls6ci2ykmn3.cloudfront.net/images/homepage/k9cPgTX/buenos_aires.jpg);
        box-shadow: 0 1px 0 #fff;
        padding: 60px 0 40px 0;
        margin-bottom: 80px;
        font-family: "proxima-nova", "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: normal;
        color: #293033;
        text-shadow: 0 1px 0 #fff;
      }
      .hero-unit .slogan {
        font-weight: normal;
        font-size: 18px;
      }
        /* search form */
      .search-form {
        background-color: #fff;
        background-color: rgba(255, 255, 255, 0.95);
        color: #293033;
        border-radius: 10px;
        background-clip: padding-box;
        box-shadow: 0px 0px 4px 0px #000;
        padding: 40px 80px 10px 80px;
        margin-bottom: 20px;
      }
      .search-form h1 {
        font-weight: normal;
        color: #293033;
        font-size: 32px;
        text-shadow: 0 1px 0 #fff;
        padding-bottom: 8px;
      }
      .search-form .error {
        color: #9d261d;
      }

    script(src='http://use.typekit.net/pdu4jrt.js')
    script.
      try{Typekit.load();}catch(e){}


    script(src="/js/jquery-1.11.1.min.js")
    script(src="/js/foundation/modernizr.js")
    script(src="/js/foundation/foundation.min.js")

    script(src="/js/search.js")

