doctype html
html.en(lang='en')
  head
    title=title
    style(type='text/css').
      html, body {
        margin: 0;
        min-height: 300px;
        background: #EBF0F2;
      }
        /* layouts */
      .main-column {
        max-width: 700px;
        width: 700px;
        margin: 0 auto;
      }
        /* header */
      .header {
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        background-color: #3678ae;
        background-image: url(data:image/svg+xml;base64,);
        background-image: linear-gradient(bottom, #275597 0%, #499fc5 100%);
        color: #fff;
        padding: 15px 0;
      }
      .header a {
        color: #fff;
      }
        /* logo */
      .logo {
        background: url("//busbud-pubweb-assets.global.ssl.fastly.net/images/logos/fc7ed21.logo-post-60@2x.png") 0 0 no-repeat;
        background-size: 124px;
        width: 124px;
        height: 40px;
      }
      .logo a {
        display: block;
        height: 100%;
      }
      .logo a:hover {
        text-decoration: none;
      }
      .logo span {
        display: none;
      }
      .row {
        max-width: 980px;
        width: 100%;
        margin-left: auto;
        margin-right: auto;
        margin-top: 0;
        margin-botton: 0;
      }
        /* hero */
      .home-hero {
        height: 400px;
        position: relative;
      }
      .hero {
        background-repeat: no-repeat;
        background-color: #000;
        background-position: center;
        background-size: cover;
        background-image: url("//busbud-pubweb-assets.global.ssl.fastly.net/images/homepage/c70405a.bolivia.jpg");
        box-shadow: 0 1px 0 #fff;
        padding: 60px 0 40px 0;
        margin-bottom: 80px;
        font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: normal;
        color: #293033;
        text-shadow: 0 1px 0 #fff;
        min-height: 250px;
      }
      .hero h1, .hero h2 {
        color: #fff;
        text-shadow: 0 1px 2px rgba(0,0,0,.6);
      }
      .home-hero h2 {
        font-size: 1.25em;
        margin-bottom: 60px;
      }
      .hero-unit .slogan {
        font-weight: normal;
        font-size: 18px;
      }
        /* search form */
      .search-form {
        background-color: #fff;
        background-color: rgba(255, 255, 255, 0.95);
        color: #293033;
        border-radius: 10px;
        background-clip: padding-box;
        box-shadow: 0px 0px 4px 0px #000;
        padding: 40px 80px 10px 80px;
        margin-bottom: 20px;
      }
      .search-form h1 {
        font-weight: normal;
        color: #293033;
        font-size: 32px;
        text-shadow: 0 1px 0 #fff;
        padding-bottom: 8px;
      }
      .search-form .error {
        color: #9d261d;
      }
    link(href='/bower_components/angucomplete/angucomplete.css', rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
    script(src='http://use.typekit.net/pdu4jrt.js')
    script.
      try{Typekit.load();}catch(e){}
    script(src='/bower_components/jquery/dist/jquery.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
    script(src='/bower_components/angular/angular.js')
    script(src='/bower_components/angucomplete/angucomplete.js')
    script(src='/js/coding_challenge_app.js')
    script(src='/js/coding_challenge_controllers.js')
  body#b(ng-app='coding_challenge_app')
    .header
      .main-column
        .logo
          a(accesskey='1', href='/en/')
            span Logo
    div(ng-controller='IndexCtrl')
      .hero
        .row
          .home-hero
            h1 Find a bus for your next trip
            .hidden-phone
              h2 Now serving bus schedules for 10463 cities in 89 countries
            form.form-inline(role='form')
              angucomplete(id="departures", placeholder="Departure", pause="400", selectedobject="selected_departure", url="http://busbud-napi-prod.global.ssl.fastly.net/search?q=", requestheaders="{x-busbud-token: '{{ busbud_token }}'}", titlefield="full_name", minlength="2", inputclass="form-control form-control")
              angucomplete(id="destinations", placeholder="Destination", pause="400", selectedobject="selected_destination", url="http://busbud-napi-prod.global.ssl.fastly.net/search?q=", requestheaders="{x-busbud-token: '{{ busbud_token }}'}", titlefield="full_name", minlength="2", inputclass="form-control form-control-small")
              button(type='submit', class='btn btn-default', ng-click="submit()") Search
              div(ng-hide="{{form_label_display}}") {{ form_label }}
